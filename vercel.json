{
  "version": 2,
  "name": "loan-management-api",
  "builds": [
    {
      "src": "pom.xml",
      "use": "@vercel/java"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "SPRING_PROFILES_ACTIVE": "prod"
  },
  "functions": {
    "src/**/*.java": {
      "runtime": "java11"
    }
  }
}